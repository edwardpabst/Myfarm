<br>
<div id="signin">
<table   align="center">
	<tr>
		<td align="center">

				 


			<%= form_for(@user) do |f| %>
				<div id="form_header">			 	 
				 	By signing up you are entitled to a free 30 day trial of the farm management software. No muss no fuss. 			 
				</div>
			<br>
				 <div class="field_user">
					 <h1> Sign up </hi>
				 </div>			 
			<br>
                <%= render 'shared/error_messages', :object => f.object %>
				<div class="field_user">
					<label class=" label" for="User">Coupon code</label> <br />
					<%= text_field_tag 'coupon_code' %> <br />
					<div class="hintbase_center">
						If you have a valid coupon code. Enter it here to receive your subscription discount.
					</div>
				</div>
				
				<div class="field_user">
					<%= f.label :name, "Name" %> <br />
					<%= f.text_field :name %>
				</div>
				<div class="field_user">
					<%= f.label :email, "Email" %> <br />
					<%= f.text_field :email %>
				</div>
				
				<div class="field_user">
					<%= f.label :user_type, "User type" %> <br />
				<% get_types_by_name_0("user_type") %>
				<%= collection_select("user", "user_type", @types, "type_value_string", "type_value_string", options = {:prompt => " "} ) %> 
				</div>
				
			
				<div class="field_user">
					<%= f.label :password, "Password" %> <br />
					<%= f.password_field :password %>
				</div>
				<div class="field_user">
					<%= f.label :password_confirmation, "Confirmation" %> <br />
					<%= f.password_field :password_confirmation %> <br>
				</div>
			<div id="signup_message">	
				_______________________________________________________________ <br>
				Everyone forgets their passwords. Soooooo, <br> 
				for security purposes please select a question and create an answer.<br>
				 This will be used in the future for validation to reset your password. <br>
			 	_______________________________________________________________ <br>
			</div>
			    
				<div class="field_user">
					<% get_types_by_name_0("security_question") %> 
					<label class=" label" for="security_question">my Question<abbr title="required"> </abbr> &nbsp;  &nbsp;</label>	<br>	
					<%= collection_select("user", "security_question", @types, "type_value_string", "type_value_string", options = {:prompt => " "}) %>	
				   	<br>
					<br>
				</div>
				<div class="field_user">
					<%= f.label :security_answer, "my Answer" %> <br />
					<%= f.text_field :security_answer %>
				
			 

				<br><br>
					<div class="actions">
						
						<%= f.submit " Sign up ", :class => "button" %>
						 
					</div>
			 	 <br><br>
				</div>
		
			<% end %>
		</td>
	</tr>
</table>
</div>