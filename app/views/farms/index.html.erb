<h1>Listing farms</h1>
<br>
<table class="index_small">
  <tr>
    <th>Farmname</th>
    <th>Total acres</th>
   
    <th></th>
    <th></th>
  </tr>

<% @farms.each do |farm| %>
  <tr>
    <td><%= farm.farmname %></td>
    <td><%= farm.total_acres %></td>
     
    <td><%= link_to 'Edit', edit_farm_path(farm) %></td>
    <td><%= link_to 'Destroy', farm, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

